generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Image {
  imageKEY String
  imageURL String
}

type resume {
  resumeKEY String
  resumeURL String
}

model about {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  description String
  skills      skills[]
  experience  experience[]
  education   education[]
  image       Image
}

model skills {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  title   String
  skill   String
  about   about?  @relation(fields: [aboutId], references: [id])
  aboutId String? @db.ObjectId
}

model experience {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  experience String
  about      about?  @relation(fields: [aboutId], references: [id])
  aboutId    String? @db.ObjectId
}

model education {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  education String
  about     about?  @relation(fields: [aboutId], references: [id])
  aboutId   String? @db.ObjectId
}

model contact {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  mail          String
  phone         String
  facebookLink  String
  xLink         String
  instagramLink String
  linkedinLink  String
  resume        resume
}

model home {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  country String
  image   Image
  name    String
  role    String
}

model portfolio {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  image       Image
  link        String
  title       String
}

model services {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  description String
  title       String
}

model login {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  password String
}
